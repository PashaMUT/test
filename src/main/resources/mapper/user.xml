<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bnt.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="org.bnt.entity.User">
        <result column="uid" property="uid"/>
        <result column="login" property="login"/>
        <result column="email" property="email"/>
        <result column="surname" property="surname"/>
        <result column="name" property="name"/>
        <result column="patronymic" property="patronymic"/>
        <result column="pass" property="pass"/>
        <result column="phone" property="phone"/>
    </resultMap>

    <resultMap id="RoleList" type="org.bnt.entity.Role">
        <result column="rid" property="id"/>
        <result column="rname" property="name"/>
        <result column="rnote" property="note"/>
    </resultMap>

    <sql id="Base_Column_List" >
        uid, login, email, surname, name, patronymic, pass, phone
    </sql>


    <select id="getAll" resultMap="BaseResultMap"  >
        SELECT
        <include refid="Base_Column_List" />
        FROM sys.users
    </select>

    <select id="getById" parameterType="int" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM sys.users
        WHERE uid = #{uid}
    </select>

    <select id="getByLogin" parameterType="String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from sys.users
        where login =  #{login}
    </select>

    <select id="getRoles" parameterType="int" resultMap="RoleList">
        select r.rid, r.rname, '' as rnote
        from sys.users_role x , sys.role r
        where x.uid = #{id}
          and r.rid = x.rid
    </select>

</mapper>